<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="po.si.ufvjm.simplex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".InserirDados"
            android:label="@string/title_activity_inserir_dados" >
            <intent-filter>
                <action android:name="InserirDados" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="simplex.InserirDados" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Resultado"
            android:label="@string/title_activity_resultado" >
        </activity>
        <activity android:name=".Principal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreDefinido"
            android:label="@string/title_activity_pre_definido" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InserirQuadro"
            android:label="@string/title_activity_inserir_quadro" >
            <intent-filter>
                <action android:name="InserirQuadro" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="simplex.InserirDados" />
            </intent-filter>
        </activity>
        <activity
            android:name=".po.si.ufvjm.simplex.matrizes.MenuMatrizes"
            android:label="@string/title_activity_menu_matrizes" >
        </activity>
        <activity
            android:name=".po.si.ufvjm.simplex.matrizes.Resultado"
            android:label="@string/title_activity_resultado" >
        </activity>
    </application>

</manifest>
