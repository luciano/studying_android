<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:stretchColumns="1,2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cada TableRow Ã© uma linha e cada componente dentro dela uma coluna
        atributo span informa quantas colunas o componente ocupara e o
        atributo stretchColumns informa quais colunas deve expandir conteudo -->

    <TableRow>
        <TextView
            android:text="Nome:"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <EditText
            android:layout_span="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Avisos por:"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <CheckBox
            android:text="Telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

</TableLayout>