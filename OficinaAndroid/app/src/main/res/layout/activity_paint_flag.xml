<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luciano.silva.oficinaandroid.textView.PaintFlagActivity">

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />
        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:ellipsize="start"
            android:maxLines="2"
            android:text="@string/textPaintFlags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />
        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPaintFlags"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto com textStyle negrito"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto com textStyle italico"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto com textStyle negrito e italico"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto com Paint Sublinhado"
            android:id="@+id/textViewSublinhado"
            android:gravity="center"
            android:layout_marginTop="6dp" />

        <TextView
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto com Paint Riscado"
            android:id="@+id/textViewRiscado"
            android:gravity="center"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</ScrollView>