<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View android:background="@color/color_vermelho"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <View android:background="@color/color_vermelho_escuro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <ImageView android:src="@drawable/logo_semfogo"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:tint="@color/color_fogo"
            android:layout_width="@dimen/action_bar_logo_width"
            android:layout_height="@dimen/action_bar_logo_height"
            android:layout_marginLeft="5dp" />
    </FrameLayout>

</android.support.design.widget.AppBarLayout>