<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:text="Usando Intent para chamar uma nova Activity"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Chamar tela 2"
        android:onClick="chamaTela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Passagem de parametros para outra Activity"
        android:textColor="#ff000000"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Digite um char: "
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ETchar"
        android:hint="Digite aqui um char"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Digite um int: "
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ETint"
        android:hint="Digite aqui um int"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Digite um double: "
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ETdouble"
        android:hint="Digite aqui um double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Digite uma string: "
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ETstring"
        android:hint="Digite aqui uma string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Enviar"
        android:id="@+id/buttonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
