<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dominando.android.propertyanimations" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExemploValueAnimator"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AlphaAnim"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RotateAnim"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ScaleAnim"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TranslateAnim"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ExemploAnimatorSet"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ExemploAnimatorListenerApagarTela"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ExemploViewPropertyAnimatorActivity"
            android:label="@string/title_activity_exemplo_view_property_animator"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ExemploValueAnimatorTextViewActivity"
            android:label="@string/title_activity_exemplo_value_animator_text_view"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>


</manifest>
