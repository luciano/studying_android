<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_cadastro"
    tools:context="startup.weekend.diamantina.helpprofissional.CadastroActivityFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="5dp"
        android:id="@+id/nome"
        android:hint="Insira seu Nome"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNome"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/nome"
        android:layout_marginTop="5dp"
        android:id="@+id/email"
        android:hint="Insira seu Email"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail"
            android:layout_below="@+id/nome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/email"
        android:layout_marginTop="5dp"
        android:id="@+id/fone"
        android:hint="Insira seu Telefone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/telefone"
            android:layout_below="@+id/etEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/fone"
        android:layout_marginTop="5dp"
        android:id="@+id/contato"
        android:hint="Insira seu EndereÃ§o"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etContato"
            android:layout_below="@+id/telefone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Cadastro"
        android:id="@+id/btnEnviar"
        android:layout_below="@+id/contato"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
