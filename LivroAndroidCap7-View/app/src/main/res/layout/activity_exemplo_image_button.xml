<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="dominando.android.livroandroidcap7_view.ExemploImageButtonActivity">

    <ImageButton
        android:id="@+id/img1"
        android:src="@drawable/smile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="#afff0000"
        android:text="Teste de Selector"
        android:background="@drawable/exemplo_seletores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
