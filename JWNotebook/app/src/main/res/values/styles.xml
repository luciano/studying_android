<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionModeOverlay">true</item>

        <!--   Cor primária do aplicativo -->
        <item name="colorPrimary">@color/primary</item>
        <!--   Variação escura da cor primária para a status bar e contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   Cor de acentuação para as views (checkbox, textfield, etc) -->
        <item name="colorAccent">@color/accent</item>

        <item name="android:popupMenuStyle">@style/TextAppearance.AppCompat.Menu</item>
    </style>


    <style name="teste" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>
